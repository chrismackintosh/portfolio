---
import Base from "../../layouts/Base.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("posts");
---

<Base title="Writing â€“ Chris Mackintosh">
  <h1 class="mb-6 text-4xl font-bold">Writing</h1>
  <ul class="space-y-6">
    {
      posts.map((p) => (
        <li>
          <a href={`${import.meta.env.BASE_URL}/writing/${p.slug}/`} class="block hover:opacity-80">
            <h2 class="text-2xl font-semibold">{p.data.title}</h2>
            {p.data.description && <p class="text-text-mute">{p.data.description}</p>}
          </a>
        </li>
      ))
    }
  </ul>
</Base>
